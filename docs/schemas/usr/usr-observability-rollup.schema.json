{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "usr/usr-observability-rollup.schema.json",
  "title": "usr-observability-rollup.schema.json",
  "allOf": [
    {
      "$ref": "./evidence-envelope.schema.json"
    }
  ],
  "type": "object",
  "properties": {
    "artifactId": {
      "type": "string",
      "const": "usr-observability-rollup"
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rowCount",
        "sloBudgetRowCount",
        "alertEvaluationRowCount",
        "batchHotspotRowCount",
        "durationHotspotCount",
        "memoryHotspotCount",
        "parserTimeHotspotCount",
        "passCount",
        "failCount",
        "blockingFailureCount",
        "alertTriggerCount",
        "blockingAlertTriggerCount",
        "warningCount",
        "errorCount"
      ],
      "properties": {
        "rowCount": {
          "type": "integer",
          "minimum": 0
        },
        "sloBudgetRowCount": {
          "type": "integer",
          "minimum": 0
        },
        "alertEvaluationRowCount": {
          "type": "integer",
          "minimum": 0
        },
        "batchHotspotRowCount": {
          "type": "integer",
          "minimum": 0
        },
        "durationHotspotCount": {
          "type": "integer",
          "minimum": 0
        },
        "memoryHotspotCount": {
          "type": "integer",
          "minimum": 0
        },
        "parserTimeHotspotCount": {
          "type": "integer",
          "minimum": 0
        },
        "passCount": {
          "type": "integer",
          "minimum": 0
        },
        "failCount": {
          "type": "integer",
          "minimum": 0
        },
        "blockingFailureCount": {
          "type": "integer",
          "minimum": 0
        },
        "alertTriggerCount": {
          "type": "integer",
          "minimum": 0
        },
        "blockingAlertTriggerCount": {
          "type": "integer",
          "minimum": 0
        },
        "warningCount": {
          "type": "integer",
          "minimum": 0
        },
        "errorCount": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "rows": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "rowType",
              "laneId",
              "scopeId",
              "blocking",
              "pass",
              "errors",
              "warnings"
            ],
            "properties": {
              "rowType": {
                "type": "string",
                "const": "slo-budget"
              },
              "laneId": {
                "type": "string",
                "minLength": 1
              },
              "scopeId": {
                "type": "string",
                "minLength": 1
              },
              "blocking": {
                "type": "boolean"
              },
              "pass": {
                "type": "boolean"
              },
              "errors": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "warnings": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "rowType",
              "id",
              "alertId",
              "laneId",
              "metric",
              "comparator",
              "threshold",
              "observedValue",
              "severity",
              "escalationPolicyId",
              "blocking",
              "triggered",
              "pass",
              "errors",
              "warnings"
            ],
            "properties": {
              "rowType": {
                "type": "string",
                "const": "alert-evaluation"
              },
              "id": {
                "type": "string",
                "minLength": 1
              },
              "alertId": {
                "type": "string",
                "minLength": 1
              },
              "laneId": {
                "type": "string",
                "minLength": 1
              },
              "metric": {
                "type": "string",
                "minLength": 1
              },
              "comparator": {
                "type": "string",
                "enum": [">", ">=", "<", "<=", "==", "!="]
              },
              "threshold": {
                "type": "number"
              },
              "observedValue": {
                "type": [
                  "number",
                  "null"
                ]
              },
              "severity": {
                "type": "string",
                "minLength": 1
              },
              "escalationPolicyId": {
                "type": "string",
                "minLength": 1
              },
              "blocking": {
                "type": "boolean"
              },
              "triggered": {
                "type": "boolean"
              },
              "pass": {
                "type": "boolean"
              },
              "errors": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "warnings": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "rowType",
              "id",
              "laneId",
              "scopeId",
              "durationMs",
              "peakMemoryMb",
              "parserTimePerSegmentMs",
              "durationRank",
              "memoryRank",
              "parserTimeRank",
              "isDurationHotspot",
              "isMemoryHotspot",
              "isParserTimeHotspot",
              "blocking",
              "pass",
              "errors",
              "warnings"
            ],
            "properties": {
              "rowType": {
                "type": "string",
                "const": "batch-hotspot"
              },
              "id": {
                "type": "string",
                "minLength": 1
              },
              "laneId": {
                "type": "string",
                "minLength": 1
              },
              "scopeId": {
                "type": "string",
                "minLength": 1
              },
              "durationMs": {
                "type": [
                  "number",
                  "null"
                ]
              },
              "peakMemoryMb": {
                "type": [
                  "number",
                  "null"
                ]
              },
              "parserTimePerSegmentMs": {
                "type": [
                  "number",
                  "null"
                ]
              },
              "durationRank": {
                "type": [
                  "integer",
                  "null"
                ],
                "minimum": 1
              },
              "memoryRank": {
                "type": [
                  "integer",
                  "null"
                ],
                "minimum": 1
              },
              "parserTimeRank": {
                "type": [
                  "integer",
                  "null"
                ],
                "minimum": 1
              },
              "isDurationHotspot": {
                "type": "boolean"
              },
              "isMemoryHotspot": {
                "type": "boolean"
              },
              "isParserTimeHotspot": {
                "type": "boolean"
              },
              "blocking": {
                "type": "boolean"
              },
              "pass": {
                "type": "boolean"
              },
              "errors": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "warnings": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    }
  },
  "unevaluatedProperties": false,
  "required": [
    "artifactId",
    "summary",
    "rows"
  ]
}
