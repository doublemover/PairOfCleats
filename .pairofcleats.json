{
  "sqlite": {
    "use": true
  },
  "search": {
    "annDefault": true,
    "denseVectorMode": "merged",
    "annBackend": "lancedb"
  },
  "indexing": {
    "embeddings": {
      "batchSize": 8192,
      "concurrency": 8,
      "lancedb": {
        "enabled": true,
        "table": "vectors",
        "idColumn": "id",
        "embeddingColumn": "vector",
        "metric": "cosine",
        "batchSize": 8192
      },
      "shards": {
        "enabled": true,
        "maxWorkers": 8,
        "dirDepth": 0
      }
    },
    "workerPool": {
      "enabled": true,
      "maxWorkers": 16
    },
    "postings": {
      "enablePhraseNgrams": true,
      "phraseMinN": 2,
      "phraseMaxN": 4,
      "enableChargrams": true,
      "chargramMinN": 3,
      "chargramMaxN": 5,
      "chargramSource": "fields",
      "chargramMaxTokenLength": 48,
      "fielded": true
    },
    "importScan": "pre",
    "astDataflow": true,
    "controlFlow": true,
    "riskAnalysis": true,
    "riskAnalysisCrossFile": true,
    "typeInference": true,
    "typeInferenceCrossFile": true,
    "gitBlame": true,
    "lint": true,
    "complexity": true,
    "pythonAst": {
      "enabled": true
    },
    "treeSitter": {
      "enabled": false
    },
    "runtime": {
      "uvThreadpoolSize": 32,
      "maxOldSpaceMb": 65536
    }
  }
}
