#!/usr/bin/env node
import { spawn } from 'node:child_process';
import path from 'node:path';
import { fileURLToPath } from 'node:url';

const args = process.argv.slice(2);
if (args.includes('--version') || args.includes('--help') || args.includes('-h')) {
  process.stdout.write('solargraph stub\n');
  process.exit(0);
}
if (!args.includes('stdio')) {
  process.stderr.write('expected "stdio" arg for solargraph lsp mode\n');
  process.exit(1);
}

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);
const script = path.join(__dirname, '..', 'stub-lsp-server.js');
const child = spawn(process.execPath, [script, '--mode', 'ruby'], { stdio: 'inherit' });
child.on('exit', (code) => process.exit(code ?? 0));
