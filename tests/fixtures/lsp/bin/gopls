#!/usr/bin/env node
import { launchStubServer } from './proxy-runner.js';

const args = process.argv.slice(2);
if (args[0] === 'version' || args[0] === '--version') {
  process.stdout.write('gopls v0.0.0-stub\n');
  process.exit(0);
}
if (args[0] === 'help' && args[1] === 'serve') {
  process.stdout.write('gopls help serve\n');
  process.exit(0);
}
if (args[0] === 'help' || args[0] === '--help') {
  process.stdout.write('gopls help\n');
  process.exit(0);
}

launchStubServer({ metaUrl: import.meta.url, mode: 'clangd' });
