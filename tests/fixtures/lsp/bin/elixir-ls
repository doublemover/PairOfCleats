#!/usr/bin/env node
import { launchStubServer } from './proxy-runner.js';

const args = process.argv.slice(2);
if (args.includes('--version') || args.includes('--help') || args.includes('-h')) {
  process.stdout.write('elixir-ls stub\n');
  process.exit(0);
}

launchStubServer({ metaUrl: import.meta.url, mode: 'elixir' });
